# ===========================================
# LOCAL DEVELOPMENT CONFIGURATION
# ===========================================
# Copy this to .env.local and configure based on your needs

# ===========================================
# DEVELOPMENT MODE SELECTION
# ===========================================
# Choose your development mode:
# - NEXT_PUBLIC_USE_STUBS=true: Use in-memory stubs/fixtures (no external services needed)
# - NEXT_PUBLIC_USE_STUBS=false: Use real local Supabase instance
# - NEXT_PUBLIC_USE_REMOTE=true: Use remote Supabase (dev/staging environment)

# Option 1: Stub Mode (Fastest, no setup required)
NEXT_PUBLIC_USE_STUBS=true

# Option 2: Local Database Mode (Requires Supabase CLI)
# NEXT_PUBLIC_USE_STUBS=false
# NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-local-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-local-service-role-key

# Option 3: Remote Development Database
# NEXT_PUBLIC_USE_STUBS=false
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-remote-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-remote-service-role-key

# ===========================================
# STRIPE CONFIGURATION (for stub mode, use test keys)
# ===========================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_stub
STRIPE_SECRET_KEY=sk_test_stub
STRIPE_WEBHOOK_SECRET=whsec_stub

# ===========================================
# NEXT.JS CONFIGURATION
# ===========================================
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=local-dev-secret-change-in-production

# ===========================================
# DEVELOPMENT DATABASE (for local Supabase)
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# ===========================================
# DEBUG OPTIONS
# ===========================================
# Enable verbose logging
DEBUG=true
NEXT_PUBLIC_DEBUG_MODE=true

