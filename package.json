{
  "name": "vntg",
  "version": "1.0.0",
  "description": "E-Commerce Platform",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:stubs": "playwright test tests/e2e/api-stub-sync.spec.ts",
    "test:all": "npm run type-check && npm run lint && npm run test:ci && npm run test:e2e",
    "sync:api-stubs": "node scripts/sync-api-stubs.js",
    "validate:stubs": "npx tsx lib/stubs/validate-stubs.ts",
    "validate:api-schema": "npx tsx -e \"import('./lib/validation/api-schema-validator').then(m => m.validateAPIStubSync())\"",
    "db:migrate": "supabase db push",
    "db:migrate:prod": "node scripts/migrate-database.js",
    "db:migrate:status": "node scripts/migrate-database.js --status",
    "db:reset": "supabase db reset",
    "db:seed": "node scripts/seed.js",
    "db:create-admin": "node scripts/create-admin.js",
    "db:backup": "node scripts/backup-restore.js backup",
    "db:restore": "node scripts/backup-restore.js restore",
    "db:list-backups": "node scripts/backup-restore.js list-backups",
    "deploy:production": "./scripts/deploy-production.sh",
    "deploy:rollback": "./scripts/rollback-deployment.sh",
    "analyze": "ANALYZE=true npm run build"
  },
