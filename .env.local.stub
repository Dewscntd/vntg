# ============================================================================
# STUB MODE - In-Memory Mocks/Fixtures
# ============================================================================
# This mode uses in-memory data without any external services.
# Perfect for offline development, UI work, and testing without dependencies.
#
# To activate: npm run dev:stub
# Or manually: cp .env.local.stub .env.local && npm run dev
# ============================================================================

# Development mode indicator
NEXT_PUBLIC_DEV_MODE=stub
NEXT_PUBLIC_USE_STUBS=true

# Next.js configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase (dummy values - not used in stub mode)
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=stub-anon-key
SUPABASE_SERVICE_ROLE_KEY=stub-service-role-key

# Stripe (dummy values - stubs handle payment simulation)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_stub
STRIPE_SECRET_KEY=sk_test_stub
STRIPE_WEBHOOK_SECRET=whsec_stub

# Optional: Analytics and monitoring (disabled in stub mode)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_GA_TRACKING_ID=

# Optional: Email service (disabled in stub mode)
RESEND_API_KEY=stub-resend-key

# Debug flags
DEBUG_STUBS=false
VERBOSE_LOGGING=false
